pipeline {
  agent any

  environment {
    REGISTRY = "docker.io"
    IMAGE = "yourdockerhub/react-app"
    KUBE_NS = "react-dev"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        sh """
          docker build -t $IMAGE:$BUILD_NUMBER -f devops/docker/Dockerfile .
        """
      }
    }

    stage('Push Image') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'USER',
          passwordVariable: 'PASS'
        )]) {
          sh """
            echo $PASS | docker login -u $USER --password-stdin
            docker push $IMAGE:$BUILD_NUMBER
          """
        }
      }
    }

    stage('Deploy to DEV') {
      steps {
        sh """
          sed -i 's|your-registry/react-app:dev|$IMAGE:$BUILD_NUMBER|g' devops/k8s/dev/deployment.yaml
          kubectl apply -f devops/k8s/dev/
        """
      }
    }
  }
}
